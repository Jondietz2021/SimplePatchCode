class Antenna_Analyzer:
  def __init__(self):
    pass

  def calc_RadiatedPowerDesinty(self):
    """
    (1/2) * (Re[E crossing H*])
    """
    pass

  def calc_RadiationIntensity(self):
    """
    r^2 times radiation density
    """
    pass

  def calc_RadiationPower(slef):
    """
    integrat the RadiatedPowerDesinty over the entire surface area (sin(theta)*dtheta*dphi)
    """
    pass

  def calc_IsotropicRadiationIntensity(self):
    """
    Radiation Power divided by 4pi
    """
    pass



  
    
